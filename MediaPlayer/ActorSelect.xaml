<Window x:Class="MediaPlayer.ActorSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="ActorSelect" Height="250" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Col1" Grid.Column ="0"  TextWrapping="Wrap" />
        <TextBox x:Name="Col2" Grid.Column ="1"  TextWrapping="Wrap" />
        <TextBox x:Name="Col3" Grid.Column ="2"  TextWrapping="Wrap"  />
        <Button Content="Создать" Grid.Column="2"   VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</Window>
