<Page x:Class="MediaPlayer.AboutFilm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MediaPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutFilm">

    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition />
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>


        <Image  x:Name="fPoster" Height="235" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Source="{Binding PathLogo}"  />
        
        <TextBlock x:Name="fText"  HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1" Grid.Column="3"/>
        <TextBlock x:Name="aText" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="1" Text="В главных ролях:" Grid.Column="5"/>
        <Button Content="К просмотру фильма" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Height="26"/>
    </Grid>
</Page>
